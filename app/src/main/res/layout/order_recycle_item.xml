<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/textView37"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="296dp"
        android:text="รายการ:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/orderNumTV"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="90dp"
        android:text="#FFFFF"
        android:textSize="15sp" />

    <TextView
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="295dp"
        android:text="บริการ:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/service_tv"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:text="service_tv"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pickordropTv"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="294dp"
        android:text="Pick up at: " />

    <TextView
        android:id="@+id/textdd"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="293dp"
        android:text="ที่อยู่:" />

    <TextView
        android:id="@+id/quantityTv"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="90dp"
        android:text="22/22/22 11:11" />

    <TextView
        android:id="@+id/ads_tv"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="90dp"
        android:text="Home" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:background="@color/bg"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="100dp">

        <ImageView
            android:id="@+id/statusImg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:background="@color/white"
            android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/statusNow_tv"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="2dp"
        android:text="status-now"
        android:textAlignment="center"
        android:textSize="12sp" />
</RelativeLayout>